{
  "name": "constitution-service",
  "version": "1.0.0",
  "description": "Constitutional compliance service for the SaaS Architecture Spec-Kit platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec tsx src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "lint": "echo \"Linting not configured\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "saas",
    "architecture",
    "constitution",
    "compliance",
    "ai",
    "agents",
    "typescript",
    "nodejs"
  ],
  "author": "Manus AI",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "openai": "^5.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
